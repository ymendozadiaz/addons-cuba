<?xml version="1.0"?>
<odoo>
    <record id="view_report_ticket_c_form" model="ir.ui.view">
        <field name="name">ticket.report.wizard.form</field>
        <field name="model">ticket.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Ticket">
                <group>
                    <field name="ticket_c_id"/>
                </group>
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_ticket_c" model="ir.actions.act_window">
        <field name="name">Ticket</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ticket.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_ticket_c_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="submenu_report_menu" name="Report" sequence="10" parent="ticket_c_menu"/> 
    <menuitem id="submenu_report_action" name="Report" sequence="10" parent="submenu_report_menu" action="action_report_ticket_c"/> 
</odoo>